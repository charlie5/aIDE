with 
     "asis",
     "common";

project Adam is

   for Source_Dirs use ("../source/**");
   for Object_Dir use "build";

   package Builder is
      for Default_Switches ("ada") use ("-g");
   end Builder;

   package Compiler renames Common.Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

end Adam;

